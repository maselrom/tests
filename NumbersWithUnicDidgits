package com.javarush.test.NumbersWithUnicDidgits;

/**
 * Created by roman_ma on 04.07.2016.
 */
public class NumbersWithUnicDigits
{
    public static void main(String[] args)
    {
        for (int i = 0; i < Integer.MAX_VALUE; i++)
        {
            if (!containRepeatDigits(i))
            {
                System.out.println(i);
            }
        }
    }


    static boolean containRepeatDigits(int n)
    {
        if (n < 10)
            return false;
        else
        {
            int last = n % 10;
            for (int prev = n / 10; prev > 0; prev /= 10)
                if (prev % 10 == last)
                    return true;
            return containRepeatDigits(n / 10);
        }
    }
}
